# PayPal API Configuration
# Get these values from https://developer.paypal.com/

# ==================== REQUIRED CREDENTIALS ====================
# PayPal Client ID (required)
PAYPAL_CLIENT_ID=your_paypal_client_id_here

# PayPal Client Secret (required)
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PayPal Mode: 'sandbox' for testing, 'live' for production
PAYPAL_MODE=sandbox

# ==================== BRANDING & BUSINESS INFO ====================
# Your business/brand name (appears in PayPal checkout)
PAYPAL_BRAND_NAME=Your Awesome Store

# Full business name (for invoices and formal documents)
PAYPAL_BUSINESS_NAME=Your Business LLC

# Support email for customer inquiries
PAYPAL_SUPPORT_EMAIL=support@yourstore.com

# ==================== URL CONFIGURATION ====================
# Your website base URL
PAYPAL_BASE_URL=https://yourstore.com

# Custom return URL (optional - defaults to baseUrl/payment/success)
PAYPAL_RETURN_URL=https://yourstore.com/checkout/success

# Custom cancel URL (optional - defaults to baseUrl/payment/cancel)
PAYPAL_CANCEL_URL=https://yourstore.com/checkout/cancelled

# ==================== PAYMENT DEFAULTS ====================
# Default currency for payments
PAYPAL_DEFAULT_CURRENCY=USD

# Default locale for PayPal interface
PAYPAL_DEFAULT_LOCALE=en-US

# Default country code
PAYPAL_DEFAULT_COUNTRY=US

# ==================== BUSINESS ADDRESS ====================
# Business address for invoices
PAYPAL_ADDRESS_LINE1=123 Business Street
PAYPAL_ADDRESS_LINE2=Suite 100
PAYPAL_ADDRESS_CITY=San Francisco
PAYPAL_ADDRESS_STATE=CA
PAYPAL_ADDRESS_POSTAL=94102
PAYPAL_ADDRESS_COUNTRY=US

# ==================== ADVANCED SETTINGS ====================
# Webhook ID for signature verification (optional)
PAYPAL_WEBHOOK_ID=your_webhook_id_here

# API timeout in milliseconds
PAYPAL_TIMEOUT=30000

# Number of retry attempts for failed requests
PAYPAL_RETRY_ATTEMPTS=3

# Enable debug logging (true/false)
PAYPAL_DEBUG=false

# ==================== MULTI-ENVIRONMENT SUPPORT ====================
# Development environment
PAYPAL_DEV_CLIENT_ID=your_dev_client_id
PAYPAL_DEV_CLIENT_SECRET=your_dev_client_secret

# Staging environment
PAYPAL_STAGING_CLIENT_ID=your_staging_client_id
PAYPAL_STAGING_CLIENT_SECRET=your_staging_client_secret

# Production environment
PAYPAL_PROD_CLIENT_ID=your_prod_client_id
PAYPAL_PROD_CLIENT_SECRET=your_prod_client_secret

# ==================== APPLICATION CONFIGURATION ====================
PORT=3000
NODE_ENV=development

# Your brand name for the application
BRAND_NAME=Your Store

# Your website URL
WEBSITE_URL=https://yourstore.com

# Default currency for your application
DEFAULT_CURRENCY=USD
